<style>
	/* Main Content Styles */
	main {
		overflow-x: hidden;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero Section */
	.hero {
		background: var(--primary-gradient);
		color: var(--text-light);
		padding: 5rem 2rem;
		text-align: center;
		position: relative;
		overflow: hidden;
		box-shadow: var(--shadow);
	}

	.hero-content {
		max-width: 900px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.hero h1 {
		font-size: 3rem;
		margin-bottom: 1.5rem;
		text-shadow: 0 2px 4px rgba(0,0,0,0.2);
		color: var(--text-light);
	}

	.hero-subtitle {
		font-size: 1.2rem;
		margin-bottom: 2.5rem;
		font-weight: 500;
		color: var(--text-light);
	}

	.accent-text {
		color: var(--text-light);
		font-weight: bold;
	}

	/* Content Section */
	.content-section {
		padding: 5rem 0;
		background-color: var(--text-light);
	}

	.section-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.lead-text {
		font-size: 1.2rem;
		line-height: 1.6;
		margin-bottom: 3rem;
	}

	.bold {
		font-weight: bold;
	}

	/* Artisans Grid */
	.artisans-grid {
		margin-bottom: 4rem;
	}

	.artisans-grid h2 {
		color: var(--primary);
		margin-bottom: 2rem;
	}

	.artisans-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1rem;
		list-style: none;
		padding: 0;
	}

	/* Services Section */
	.services-section {
		margin-bottom: 4rem;
	}

	.services-section h2 {
		color: var(--primary);
		margin-bottom: 2rem;
	}

	.services-list {
		display: grid;
		gap: 2rem;
	}

	/* Benefits Section */
	.benefits-section {
		margin-bottom: 4rem;
	}

	.benefits-section h2 {
		color: var(--primary);
		margin-bottom: 2rem;
	}

	.benefits-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	/* Conclusion Section */
	.conclusion-section {
		margin-bottom: 4rem;
		padding: 2rem;
		background-color: var(--gray-light);
		border-radius: 8px;
		box-shadow: var(--shadow);
	}

	/* CTA Section */
	.cta-section {
		background: var(--primary-gradient);
		color: var(--text-light);
		padding: 4rem 2rem;
		border-radius: 8px;
		text-align: center;
	}

	.cta-content {
		max-width: 600px;
		margin: 0 auto;
	}

	.cta-content h2 {
		margin-bottom: 1rem;
		color: var(--text-light);
	}

	.cta-content p {
		margin-bottom: 2rem;
		color: var(--text-light);
	}

	.cta-content a {
		color: var(--text-light);
		text-decoration: underline;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}

	/* Responsive Styles */
	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.cta-buttons {
			flex-direction: column;
		}

		.btn {
			width: 100%;
		}
	}
</style> 