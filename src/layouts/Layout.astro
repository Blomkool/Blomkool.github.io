---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="South African Recruitment & Shutdown Powerhouse" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-container">
				<div class="logo">
					<a href="/">
						<img src="/logo.png" alt="PRONTO STAFFING" class="logo-image" />
						<span class="logo-text">PRONTO</span>
					</a>
				</div>
				
				<div class="desktop-nav">
					<a href="/" class="nav-link">Home</a>
					<a href="#job-search" class="nav-link">Job Search</a>
					<a href="#shutdowns" class="nav-link">Artisans for Shut Downs</a>
					<a href="#submit-cv" class="nav-link">Submit CV</a>
					<a href="#about" class="nav-link">About</a>
				</div>
				
				<div class="desktop-contact">
					<a href="mailto:joan@pronto.co.za" class="contact-link">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
						joan@pronto.co.za
					</a>
				</div>

				<button class="mobile-menu-button" aria-label="Toggle menu">
					<span class="hamburger-icon"></span>
				</button>
			</div>

			<div class="mobile-menu">
				<a href="/" class="nav-link">Home</a>
				<a href="#job-search" class="nav-link">Job Search</a>
				<a href="#shutdowns" class="nav-link">Artisans for Shut Downs</a>
				<a href="#submit-cv" class="nav-link">Submit CV</a>
				<a href="#about" class="nav-link">About</a>
				<div class="mobile-contact">
					<a href="mailto:joan@pronto.co.za" class="contact-link">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
						joan@pronto.co.za
					</a>
				</div>
			</div>
		</nav>
		<slot />

		<footer>
			<div class="footer-container">
				<div class="footer-section">
					<div class="footer-logo">
						<img src="/logo.png" alt="PRONTO STAFFING" class="footer-logo-image" />
						<span>PRONTO STAFFING</span>
					</div>
					<p>South African Recruitment & Shutdown Powerhouse with over 30 years of industry expertise.</p>
				</div>
				<div class="footer-section">
					<h3>Quick Links</h3>
					<a href="/">Home</a>
					<a href="#job-search">Job Search</a>
					<a href="#shutdowns">Shutdowns</a>
					<a href="#submit-cv">Submit CV</a>
				</div>
				<div class="footer-section">
					<h3>Contact Us</h3>
					<a href="mailto:joan@pronto.co.za">joan@pronto.co.za</a>
					<a href="mailto:careers@prontostaffing.co.za">careers@prontostaffing.co.za</a>
				</div>
			</div>
			<div class="copyright">
				Â© {new Date().getFullYear()} PRONTO STAFFING. All rights reserved.
			</div>
		</footer>

		<script>
			const menuButton = document.querySelector('.mobile-menu-button');
			const mobileMenu = document.querySelector('.mobile-menu');
			
			menuButton.addEventListener('click', () => {
				menuButton.classList.toggle('active');
				mobileMenu.classList.toggle('active');
				document.body.classList.toggle('menu-open');
			});

			// Close mobile menu when clicking on links
			const mobileLinks = document.querySelectorAll('.mobile-menu .nav-link');
			mobileLinks.forEach(link => {
				link.addEventListener('click', () => {
					menuButton.classList.remove('active');
					mobileMenu.classList.remove('active');
					document.body.classList.remove('menu-open');
				});
			});
		</script>
	</body>
</html>
<style is:global>
	:root {
		/* Enhanced color palette while maintaining purple theme */
		--primary: #9C27B0;          /* Richer purple */
		--primary-light: #CE93D8;    /* Soft lavender */
		--primary-dark: #6A1B9A;     /* Deep purple */
		--primary-gradient: linear-gradient(135deg, #9C27B0 0%, #6A1B9A 100%);
		--primary-transparent: rgba(156, 39, 176, 0.08);
		
		/* Complementary colors */
		--accent: #FF9800;           /* Vibrant orange for contrast */
		--accent-light: #FFB74D;     /* Light orange */
		--accent-dark: #F57C00;      /* Deep orange */
		
		/* Neutral colors */
		--text-dark: #212121;        /* Near black for text */
		--text-medium: #424242;      /* Dark gray for secondary text */
		--text-light: #FFFFFF;       /* White for contrast text */
		--gray-lightest: #FAFAFA;    /* Almost white background */
		--gray-light: #F5F5F5;       /* Light gray background */
		--gray: #E0E0E0;             /* Medium gray for borders */
		--gray-dark: #757575;        /* Dark gray for subtle text */
		
		/* UI elements */
		--success: #4CAF50;          /* Green for success messages */
		--warning: #FFC107;          /* Amber for warnings */
		--error: #F44336;            /* Red for errors */
		--info: #2196F3;             /* Blue for information */
		
		/* Effects */
		--shadow-light: 0 2px 5px rgba(0, 0, 0, 0.08);
		--shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		--shadow-dark: 0 8px 16px rgba(0, 0, 0, 0.15);
		--transition: all 0.3s ease;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Poppins', sans-serif;
		color: var(--text-dark);
		line-height: 1.6;
		background-color: var(--gray-lightest);
		overflow-x: hidden;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Montserrat', sans-serif;
		font-weight: 600;
		line-height: 1.3;
		margin-bottom: 1rem;
		color: var(--text-dark);
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
	}

	h2 {
		font-size: 2rem;
		position: relative;
		padding-bottom: 0.5rem;
	}

	h2:after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 60px;
		height: 3px;
		background-color: var(--primary);
	}

	h3 {
		font-size: 1.5rem;
	}

	p {
		margin-bottom: 1.5rem;
		color: var(--text-medium);
	}

	a {
		color: var(--primary);
		text-decoration: none;
		transition: var(--transition);
	}

	a:hover {
		color: var(--primary-dark);
	}

	ul {
		list-style-position: inside;
		margin-bottom: 1.5rem;
	}

	li {
		margin-bottom: 0.5rem;
		color: var(--text-medium);
	}

	/* Navigation */
	nav {
		background: var(--text-light);
		box-shadow: var(--shadow);
		position: sticky;
		top: 0;
		z-index: 1000;
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.75rem 2rem;
	}

	.logo a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-dark);
		text-decoration: none;
	}

	.logo-image {
		height: 40px;
		width: auto;
	}

	.logo-text {
		font-family: 'Montserrat', sans-serif;
		font-weight: 700;
		font-size: 1.25rem;
		color: var(--primary);
		letter-spacing: 1px;
	}

	.desktop-nav {
		display: flex;
		gap: 2rem;
	}

	.nav-link {
		color: var(--text-medium);
		font-weight: 500;
		position: relative;
		padding: 0.5rem 0;
	}

	.nav-link:after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 2px;
		background-color: var(--primary);
		transition: var(--transition);
	}

	.nav-link:hover {
		color: var(--primary);
	}

	.nav-link:hover:after {
		width: 100%;
	}

	.contact-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--primary);
		font-weight: 500;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		background-color: var(--primary-transparent);
		transition: var(--transition);
	}

	.contact-link:hover {
		background-color: var(--primary-light);
		color: var(--text-light);
	}

	.contact-link svg {
		transition: transform 0.2s ease;
	}

	.contact-link:hover svg {
		transform: translateX(3px);
		stroke: var(--text-light);
	}

	.mobile-menu-button {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
		width: 30px;
		height: 30px;
		position: relative;
		z-index: 1001;
	}

	.hamburger-icon, 
	.hamburger-icon:before, 
	.hamburger-icon:after {
		display: block;
		width: 30px;
		height: 3px;
		background-color: var(--primary);
		position: absolute;
		transition: var(--transition);
	}

	.hamburger-icon {
		top: 50%;
		transform: translateY(-50%);
	}

	.hamburger-icon:before {
		content: '';
		top: -8px;
	}

	.hamburger-icon:after {
		content: '';
		bottom: -8px;
	}

	.mobile-menu-button.active .hamburger-icon {
		background-color: transparent;
	}

	.mobile-menu-button.active .hamburger-icon:before {
		top: 0;
		transform: rotate(45deg);
	}

	.mobile-menu-button.active .hamburger-icon:after {
		bottom: 0;
		transform: rotate(-45deg);
	}

	.mobile-menu {
		display: none;
		position: fixed;
		top: 0;
		right: -100%;
		width: 80%;
		max-width: 400px;
		height: 100vh;
		background-color: var(--text-light);
		padding: 6rem 2rem 2rem;
		box-shadow: var(--shadow-dark);
		flex-direction: column;
		gap: 1.5rem;
		transition: right 0.3s ease;
		z-index: 1000;
	}

	.mobile-menu.active {
		right: 0;
	}

	.mobile-menu .nav-link {
		font-size: 1.1rem;
		padding: 0.75rem 0;
		border-bottom: 1px solid var(--gray);
	}

	.mobile-contact {
		margin-top: 1rem;
		padding-top: 1rem;
		border-top: 1px solid var(--gray);
	}

	.mobile-contact .contact-link {
		justify-content: center;
		padding: 0.75rem;
	}

	body.menu-open:before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: 999;
	}

	/* Footer */
	footer {
		background-color: var(--text-dark);
		padding: 3rem 0 1rem;
		margin-top: 4rem;
		color: var(--text-light);
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		padding: 0 2rem;
	}

	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
	}

	.footer-logo-image {
		height: 36px;
		width: auto;
		filter: brightness(0) invert(1);
	}

	.footer-logo span {
		font-family: 'Montserrat', sans-serif;
		font-weight: 700;
		color: var(--text-light);
	}

	.footer-section p {
		color: var(--gray);
		margin-bottom: 0;
	}

	.footer-section h3 {
		color: var(--primary-light);
		margin-bottom: 1rem;
		font-size: 1.2rem;
	}

	.footer-section a {
		color: var(--gray);
		transition: var(--transition);
	}

	.footer-section a:hover {
		color: var(--primary-light);
		transform: translateX(3px);
	}

	.copyright {
		text-align: center;
		margin-top: 3rem;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		color: var(--gray);
		font-size: 0.9rem;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.desktop-nav,
		.desktop-contact {
			display: none;
		}

		.mobile-menu-button {
			display: block;
		}

		.mobile-menu {
			display: flex;
		}

		h1 {
			font-size: 2rem;
		}

		h2 {
			font-size: 1.75rem;
		}
	}
</style>
